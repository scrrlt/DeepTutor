# DeepTutor Backend Environment Variables
# Copy this file to .env and fill in your values

# LLM Provider Configuration
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o
LLM_API_KEY=your-openai-api-key-here

# Alternative LLM Providers (uncomment and configure as needed)
# OPENAI_API_KEY=your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key
# GEMINI_API_KEY=your-gemini-api-key
# DEEPSEEK_API_KEY=your-deepseek-api-key

# Embedding Configuration
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_API_KEY=your-embedding-api-key
EMBEDDING_DIMENSION=1536

# Database Configuration (if using)
# DATABASE_URL=postgresql://user:password@localhost/deeptutor

# Redis Configuration (optional, for caching)
# REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=["http://localhost:3000", "https://your-frontend-domain.vercel.app"]

# Environment
ENVIRONMENT=production

# Optional: Feature Flags
ENABLE_RAG=true
ENABLE_WEB_SEARCH=true
ENABLE_CACHING=true
